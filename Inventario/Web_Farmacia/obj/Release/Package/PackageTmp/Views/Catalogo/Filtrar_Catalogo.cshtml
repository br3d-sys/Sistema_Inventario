    <div class="container-fluid p-4">

        <h1 class="mb-4">Buscar Productos</h1>

        <form action="/" method="post">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="nombre">Nombre de Producto</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" />
                </div>
                <div class="form-group col-sm-4">
                    <label for="nombre">Categoria de Producto</label>
                    <select class="form-control">
                        <option value="value">text</option>
                    </select>
                </div>
                <div class="col-sm-2 align-self-center align-self-end text-center">
                    <button type="submit" class="btn btn-primary pr-4 pl-4">Buscar</button>
                </div>
                
            </div>
        </form>
    </div>


    <div class="bg-dark p-4">
    </div>

    <section class="content p-4">

        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">

                    @Html.Raw(ViewBag.texto);
                   
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <nav aria-label="Contacts Page Navigation">
                    <ul class="pagination justify-content-center m-0">
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#">6</a></li>
                        <li class="page-item"><a class="page-link" href="#">7</a></li>
                        <li class="page-item"><a class="page-link" href="#">8</a></li>
                    </ul>
                </nav>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

    </section>

    <div class="modal fade" id="mod" role="dialog">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Información</h4>
                </div>
                <div class="modal-body">
                    <p id="content"></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="mod-acept"> Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function (e) {

            function agregar(id,nombre,categoria,cantidad,precio) {
               
                var url = "@Url.Action("Agregar_Pedido", "Catalogo")";

                var formdata = new FormData();

                formdata.append("id", id);
                formdata.append("nombre", nombre);
                formdata.append("categoria", categoria);
                formdata.append("cantidad", cantidad);
                formdata.append("precio", precio);

                var ajax = new XMLHttpRequest();

                ajax.onreadystatechange = function () {
                    if (ajax.readyState == 4) {
                        var response = JSON.parse(ajax.responseText);
                        if (response.success) {
                            console.log(response.message);
                            document.getElementById("content").innerHTML = response.message;
                            $("#mod").modal({ backdrop: true });
                        } else {
                            console.log(response);
                            document.getElementById("content").innerHTML = response.message;
                            $("#mod").modal({ backdrop: true });
                        }
                    }
                }

                ajax.open("POST", url, true);
                ajax.send(formdata);

                e.preventDefault();
            }

            document.getElementById("mod-acept").addEventListener("click", function () {
                $("#mod").modal("hide");
            })

        })
    </script>
    
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/dist/js/demo.js"></script>
</body>
</html>

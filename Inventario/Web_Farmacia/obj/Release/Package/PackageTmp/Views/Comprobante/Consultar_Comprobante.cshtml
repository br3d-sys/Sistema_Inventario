
@{
    ViewBag.Title = "Consultar_Comprobante";
    Layout = "~/Views/Main.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lista de Comprobantes</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Listar Comprobantes</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Comprobantes</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            @model Web_Farmacia.Controllers.Info

            <form action="/Cliente/Consultar_Comprobante" method="post" class="">

                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label for="nombre">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ingrese su Nombre">
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="dni">DNI</label>
                        <input class="form-control" type="text" name="dni" id="dni" placeholder="Ingrese su DNI">
                    </div>
                    <div class="col-sm-2 align-self-center align-self-end text-center">
                        <button type="submit" class="btn btn-primary pr-4 pl-4">Buscar</button>
                    </div>
                </div>
            </form>

            <!-- Table row -->

            @if (ViewBag.eliminar != null)
            {
                <div class="alert alert-dark" role="alert">
                    @ViewBag.eliminar
                </div>
            }

            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Venta</th>
                                <th>Comprobante</th>
                                <th>Serie</th>
                                <th>Numero</th>
                                <th>Fecha</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var comprobante in Model.Com)
                                {
                                    <tr>
                                        <td>@comprobante.Cliente</td>
                                        <td>@comprobante.Ventas</td>
                                        <td>@comprobante.T_comprobante</td>
                                        <td>@comprobante.Serie_com</td>
                                        <td>@comprobante.Nro_com</td>
                                        <td>@comprobante.Fecha</td>
                                        <td class="text-center">
                                            <a href="/Comprobante/Reporte?id=@comprobante.Id_ventas" target="_blank" class="btn btn-primary" id="imprimir"><i class="fa fa-print"></i></a>
                                            <button onclick="eliminar('@comprobante.Id_comprobante')" class="btn btn-danger" id="Eliminar"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Paginación
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
<div class="modal fade" id="mod" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Información</h4>
            </div>
            <div class="modal-body">
                <p id="content">Desea eliminar el Comprobante?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="mod-acept"> Eliminar</button><button class="btn btn-secondary" id="mod-can">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script>

    var f_id;

    document.addEventListener("DOMContentLoaded", function (e) {

        document.getElementById("mod-acept").addEventListener("click", function () {
            location.replace("/Comprobante/eliminar?id=" + f_id);
            $("#mod").modal("hide");
        })
        document.getElementById("mod-can").addEventListener("click", function () {
            $("#mod").modal("hide");
        })

        
    })

    function eliminar(id) {
        $("#mod").modal({ backdrop: true });
        f_id = id;
    }


</script>


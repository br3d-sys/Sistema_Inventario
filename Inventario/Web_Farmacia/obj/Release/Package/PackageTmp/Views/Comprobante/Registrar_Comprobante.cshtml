
@{
    ViewBag.Title = "Registrar_Comprobante";
    Layout = "~/Views/Main.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registrar Comprobante</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Registrar Comprobante</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Registrar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        @model Web_Farmacia.Controllers.Info
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id="registrar">

                <div class="d-flex mb-4">
                    <a href="@Url.Action("Consultar_Comprobante", "Comprobante")" class="btn btn-secondary ml-auto"><i class="fa fa-caret-left"></i> Lista de Pedidos</a>
                </div>
                <input type="hidden" name="id_usuario" value="1" id="id_usuario" />
                <div class="form-row">
                    <div class="form-group col-sm-6">
                        <label for="id_cliente">Cliente</label>

                        <select class="form-control" name="id_cliente" id="id_cliente">
                            @foreach (var item in Model.Cli)
                            {
                                <option value="@item.Id_cliente">@item.Nombre</option>
                            }
                        </select>

                        <span class="badge badge-warning sp" id="sp_id_cliente"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="ventas">Venta</label>
                        <input type="hidden" name="id_ventas" id="id_ventas" value="@Model.Obj_ven.Id_venta">
                        <input class="form-control" type="text" name="ventas" id="ventas" value ="@Model.Obj_ven.Codigo" readonly>
                        <span class="badge badge-warning sp" id="sp_id_ventas"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="fecha">Fecha</label>
                        <input class="form-control" type="date" name="fecha" id="fecha" placeholder="Seleccione la fecha">
                        <span class="badge badge-warning sp" id="sp_fecha"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="t_comprobante">Tipo de Comprobante</label>
                        <select class="form-control" name="t_comprobante" id="t_comprobante">
                            <option value="boleta">Boleta</option>
                            <option value="factura">Factura</option>
                        </select>
                        <span class="badge badge-warning sp" id="sp_t_comprobante"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="serie_com">Serie</label>
                        <input class="form-control" type="text" name="serie_com" id="serie_com" placeholder="Ingrese la Serie">
                        <span class="badge badge-warning sp" id="sp_serie_com"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="nro_com">N° de Comprobante</label>
                        <input class="form-control" type="text" name="nro_com" id="nro_com" placeholder="Ingrese la N°">
                        <span class="badge badge-warning sp" id="sp_nro_com"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="tipo">Tipo</label>
                        <select class="form-control" name="tipo" id="tipo">
                            <option value="fisico">Físico</option>
                            <option value="digital">Digital</option>
                        </select>
                        <span class="badge badge-warning sp" id="sp_tipo"></span>
                    </div>


                </div>

                <div class="form-row d-flex justify-content-between">
                    <div class="form-group col-auto">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                    <div class="form-group col-auto">
                        <a id="btn_imprimir" name="btn_imprimir" class="btn btn-secondary disabled">Imprimir</a>
                    </div>
                </div>

            </form>



        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Paginación
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

<div class="modal fade" id="mod" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Información</h4>
            </div>
            <div class="modal-body">
                <p id="content"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="mod-acept"> Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>

    //document.addEventListener("DOMContentLoaded",function(){

           document.getElementById("registrar").addEventListener("submit", function (e) {

            var url = "@Url.Action("Registrar_Comprobante", "Comprobante")";

               var form = document.getElementById("registrar");

               var formdata = new FormData(form);

                var ajax = new XMLHttpRequest();

                ajax.onreadystatechange = function () {
                    if (ajax.readyState == 4) {

                        var response = JSON.parse(ajax.responseText);
                        if (response.success) {
                            console.log(response.message);

                            document.getElementById("content").innerHTML = response.message;
                            $("#mod").modal({ backdrop: true });
                            document.getElementById("btn_imprimir").href = "/Comprobante/Reporte?id="+response.com;
                            document.getElementById("btn_imprimir").className = "btn btn-secondary";
                            limpiar_spam();
                        } else {
                            console.log(response);
                            limpiar_spam();
                            for (var prop in response.datos) {
                                //console.log("propiedad " + prop + " valor " + response.datos[prop]);
                                document.getElementById(prop).innerHTML = response.datos[prop]
                            }
                        }
                    }
                }

                ajax.open("POST", url, true);
                //ajax.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                ajax.send(formdata);

                e.preventDefault();
        })

        document.getElementById("mod-acept").addEventListener("click", function () {
            $("#mod").modal("hide");

            location.replace("@Url.Action("Consultar_Comprobante", "Comprobante")");
        })

        function limpiar_spam() {
            var elementos = document.getElementsByClassName("sp");
            for (i = 0; i < elementos.length ; i++) {
                elementos.item(i).innerHTML = "";
            }
        }

    //})

</script>



@{
    ViewBag.Title = "Registrar_Encontrado";
    Layout = "~/Views/Main.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registrar Estado</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Registrar Estado</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@model Web_Farmacia.Controllers.Info
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Registrar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="post" enctype="multipart/form-data" id="registrar">
                <div class="form-row d-flex justify-content-between">

                    <div class="col-auto d-flex justify-content-between">
                        <h4 class="col-auto pt-1 mr-2">Buscar Bien</h4>
                        <div class="col-auto">
                            <button type="button" class="btn btn-secondary" id="btn_buscar"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    <div class="d-flex mb-4 form-group">
                        <a href="/Encontrado/Consultar_Encontrado" class="btn btn-secondary ml-auto"><i class="fa fa-caret-left"></i> Lista Encontrados</a>
                    </div>
                </div>

                <div class="form-row">

                    <input class="form-control" type="hidden" name="id_bienes" id="id_bienes">

                    <div class="form-group col-sm-5">
                        <label for="nombre">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre" disabled>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="id_categoria">Categoria</label>
                        <input class="form-control" type="text" name="categoria" id="categoria" placeholder="Categoria" disabled>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="serie">Serie</label>
                        <input class="form-control" type="text" name="serie" id="serie" placeholder="Serie" disabled>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label for="codigo">Codigo</label>
                        <input class="form-control" type="text" name="codigo" id="codigo" placeholder="Ingrese el Codigo" disabled />
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="estado_bien">Estado</label>
                        <input class="form-control" type="text" name="estado_bien" id="estado_bien" placeholder="Estado" disabled>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="marca">Marca</label>
                        <input class="form-control" type="text" name="marca" id="marca" placeholder="Ingrese la Marca" disabled>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="modelo">Modelo</label>
                        <input class="form-control" type="text" name="modelo" id="modelo" placeholder="Ingrese el Modelo" disabled>
                    </div>
                </div>
                <span class="badge badge-warning sp text-center" id="sp_id_bienes"></span>
                <hr />
                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label for="estado">Estado</label>
                        <select class="form-control" name="estado" id="estado">
                            <option value="Nuevo">Nuevo</option>
                            <option value="Bueno">Bueno</option>
                            <option value="Regular">Regular</option>
                            <option value="Malo">Malo</option>
                        </select>
                        <span class="badge badge-warning sp" id="sp_detalle"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="id_inventario">Inventario</label>
                        <select class="form-control" name="id_inventario" id="id_inventario">
                            @foreach (var inv in Model.Inv)
                            {
                                <option value="@inv.Id_inventario">@inv.Nombre</option>
                            }
                        </select>
                        <span class="badge badge-warning sp" id="sp_id_inventario"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="fecha">Fecha</label>
                        <input class="form-control" type="date" name="fecha" id="fecha" placeholder="Ingrese la Fecha">
                        <span class="badge badge-warning sp" id="sp_fecha"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="imagen">Adjuntar Imagen</label>
                        <input class="form-control" type="file" name="imagen" id="imagen" placeholder="Seleccione la imagen">
                        <span class="badge badge-warning sp" id="sp_imagen"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-7">
                        <label for="detalle_estado">Descripcion de Estado</label>
                        <input class="form-control" type="text" name="detalle_estado" id="detalle_estado" placeholder="Seleccione la imagen">
                        <span class="badge badge-warning sp" id="sp_detalle_estado"></span>
                    </div>
                    <div class="form-group col-sm-5 d-flex align-items-end justify-content-end pb-2" >
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="adjuntar_documento" id="adjuntar_documento">
                            <label class="form-check-label" for="adjuntar_documento">Adjuntar un Documento</label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        <label for="tipo_documento">Tipo de Documento</label>
                        <select class="form-control" name="tipo_documento" id="tipo_documento" disabled>
                            <option value="Informe">Informe</option>
                            <option value="Gruia de Remision">Guia de Remision</option>
                            <option value="Boleta">Boleta</option>
                            <option value="Factura">Factura</option>
                            <option value="Otros">Otros</option>
                        </select>
                        <span class="badge badge-warning sp" id="sp_tipo_documento"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="num_documento">Numero de Documento</label>
                        <input class="form-control" type="text" name="num_documento" id="num_documento" placeholder="Número del Documento" disabled>
                        <span class="badge badge-warning sp" id="sp_num_documento"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="adj_doc">Adjuntar Documento</label>
                        <input class="form-control" type="file" name="adj_doc" id="adj_doc" placeholder="Seleccione el documento" disabled>
                        <span class="badge badge-warning sp" id="sp_adj_doc"></span>
                    </div>
                </div>
                <div class="form-row d-flex justify-content-between">
                    <div class="form-group col-auto">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

<div class="modal fade" id="mod" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Información</h4>
            </div>
            <div class="modal-body">
                <p id="content">
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="mod-acept"> Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="mod_bienes" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Bienes</h4>
            </div>
            <div class="modal-body">




                <form action="/Usuario/Consultar_Usuario" method="post" class="" id="buscar">

                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label for="mod_nombre">Nombre de Bien</label>
                            <input class="form-control" type="text" name="mod_nombre" id="mod_nombre" placeholder="Ingrese su Nombre">
                        </div>
                        <div class="form-group col-sm-3">
                            <label for="mod_codigo">Codigo</label>
                            <input class="form-control" type="text" name="mod_codigo" id="mod_codigo" placeholder="Codigo">
                        </div>
                        
                        <div class="col-sm-2 align-self-center align-self-end text-center">
                            <button type="submit" class="btn btn-primary pr-4 pl-4">Buscar</button>
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col-12 table-responsive">
                        <table class="table table-striped" id="tabla_bienes">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Codigo</th>
                                    <th>Categoria</th>
                                    <th>Opc.</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>




            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="mod-acept"> Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {


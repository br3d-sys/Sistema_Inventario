                                document.getElementById("serie").value = objeto.Serie;
                                document.getElementById("codigo").value = objeto.Codigo;
                                document.getElementById("estado_bien").value = objeto.Estado;
                                document.getElementById("marca").value = objeto.Marca;
                                document.getElementById("modelo").value = objeto.Modelo;
                                document.getElementById("id_bienes").value = objeto.Id_bienes;
                            };
                            //    function (dat) {
                            //    //document.getElementById("nombre").value = "123";
                            //    console.log(response.datos[i].Nombre);
                            //};



                            opciones.appendChild(boton);

                            body_tabla.appendChild(row);

                        }


                        //console.log(response.message);
                        //document.getElementById("content").innerHTML = response.message;
                        //$("#mod").modal({ backdrop: 'static' });
                        //limpiar_spam();
                    } else {
                        //console.log(response);
                        //limpiar_spam();
                        //for (var prop in response.datos) {
                        //    //console.log("propiedad " + prop + " valor " + response.datos[prop]);
                        //    document.getElementById(prop).innerHTML = response.datos[prop]
                        //}

                        document.getElementById("sp_id_bienes").innerHTML = "Error: No se Cargó el Bien";
                    }
                }
            }

            ajax.open("POST", url, true);

            ajax.send();

        });

        document.getElementById("mod-acept").addEventListener("click", function () {
            $("#mod").modal("hide");

            document.getElementById("id_bienes").value = "";
            document.getElementById("id_inventario").value = "";
            document.getElementById("fecha").value = "";
            document.getElementById("estado").value = "";
            document.getElementById("imagen").value = "";

        });

        function limpiar_spam() {
            var elementos = document.getElementsByClassName("sp");
            for (i = 0; i < elementos.length; i++) {
                elementos.item(i).innerHTML = "";
            }
        }

        function eliminar() {
            alert("hola a todos");
        }

        document.getElementById("adjuntar_documento").addEventListener("change", function (e) {

            if (e.target.checked == true) {
                document.getElementById("tipo_documento").disabled = false;
                document.getElementById("num_documento").disabled = false;
                document.getElementById("adj_doc").disabled = false;
            } else {
                document.getElementById("tipo_documento").disabled = true;
                document.getElementById("num_documento").disabled = true;
                document.getElementById("adj_doc").disabled = true;
            }
        });


    });

</script>


@{
    ViewBag.Title = "Registrar_Bien";
    Layout = "~/Views/Main.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registrar Bien</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Registrar Bien</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@model Web_Farmacia.Controllers.Info

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Registrar</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="post" enctype="multipart/form-data" id="registrar">

                <div class="d-flex mb-4">
                    <a href="/Bien/Consultar_Bien" class="btn btn-secondary ml-auto"><i class="fa fa-caret-left"></i> Lista de Patrimonio</a>
                </div>

                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label for="nombre">Nombre</label>
                        <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ingrese su Nombre">
                        <span class="badge badge-warning sp" id="sp_nombre"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="id_categoria">Categoria</label>
                        <select class="form-control" name="id_categoria" id="id_categoria">
                            @foreach (var cat in Model.Cat)
                            {
                                <option value="@cat.Id_categoria">@cat.Nombre</option>
                            }
                        </select>
                        <span class="badge badge-warning sp" id="sp_categoria"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="serie">Serie</label>
                        <input class="form-control" type="text" name="serie" id="serie" placeholder="Ingrese la Serie">
                        <span class="badge badge-warning sp" id="sp_serie"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="descripcion">Descripcion</label>
                        <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Ingrese la Descripcion">
                        <span class="badge badge-warning sp" id="sp_descripcion"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label for="codigo">Codigo</label>
                        <input class="form-control" type="text" name="codigo" id="codigo" placeholder="Ingrese el Codigo" />
                        <span class="badge badge-warning sp" id="sp_codigo"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="precio">Precio</label>
                        <input class="form-control" type="number" name="precio" id="precio" placeholder="Precio">
                        <span class="badge badge-warning sp" id="sp_precio"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="estado">Estado</label>
                        <select class="form-control" name="estado" id="estado">
                            <option value="Nuevo">Nuevo</option>
                            <option value="Usado">Usado</option>
                            <option value="Otros">Otros</option>
                        </select>
                        <span class="badge badge-warning sp" id="sp_estado"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="fecha_ing">Fecha</label>
                        <input class="form-control" type="date" name="fecha_ing" id="fecha_ing" placeholder="Ingrese la Fecha">
                        <span class="badge badge-warning sp" id="sp_fecha_ing"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="marca">Marca</label>
                        <input class="form-control" type="text" name="marca" id="marca" placeholder="Ingrese la Marca">
                        <span class="badge badge-warning sp" id="sp_marca"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-3">
                        <label for="color">Color</label>
                        <input class="form-control" type="text" name="color" id="color" placeholder="Ingrese el Color">
                        <span class="badge badge-warning sp" id="sp_color"></span>
                    </div>
                    <div class="form-group col-sm-3">
                        <label for="modelo">Modelo</label>
                        <input class="form-control" type="text" name="modelo" id="modelo" placeholder="Ingrese el Modelo">
                        <span class="badge badge-warning sp" id="sp_modelo"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="alto">Alto</label>
                        <input class="form-control" type="text" name="alto" id="alto" placeholder="Ingrese el Alto">
                        <span class="badge badge-warning sp" id="sp_alto"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="ancho">Ancho</label>
                        <input class="form-control" type="text" name="ancho" id="ancho" placeholder="Ingrese el Ancho">
                        <span class="badge badge-warning sp" id="sp_ancho"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="profundidad">Profundidad</label>
                        <input class="form-control" type="text" name="profundidad" id="profundidad" placeholder="Ingrese la Profundidad">
                        <span class="badge badge-warning sp" id="sp_profundidad"></span>
                    </div>

                </div>
                <div class="form-row d-flex justify-content-between">
                    <div class="form-group col-auto">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->

<div class="modal fade" id="mod" role="dialog">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Información</h4>
            </div>
            <div class="modal-body">
                <p id="content"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="mod-acept"> Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded",function(){

           document.getElementById("registrar").addEventListener("submit", function (e) {

            var url = "@Url.Action("Registrar_Bien", "Bien")";
               var id_categoria = document.getElementById("id_categoria").value;
               var nombre = document.getElementById("nombre").value;
               var serie = document.getElementById("serie").value;
               var descripcion = document.getElementById("descripcion").value;
               var codigo = document.getElementById("codigo").value;
               var precio = document.getElementById("precio").value;
               var estado = document.getElementById("estado").value;
               var fecha_ing = document.getElementById("fecha_ing").value;
               var marca = document.getElementById("marca").value;
               var color = document.getElementById("color").value;
               var modelo = document.getElementById("modelo").value;
               var alto = document.getElementById("alto").value;
               var ancho = document.getElementById("ancho").value;
               var profundidad = document.getElementById("profundidad").value;

               var param = "id_categoria=" + id_categoria + "&nombre=" + nombre + "&serie=" + serie +"&descripcion=" + descripcion +
                   "&codigo=" + codigo + "&precio=" + precio + "&estado=" + estado + "&fecha_ing=" + fecha_ing +
                   "&marca=" + marca + "&color=" + color + "&modelo=" + modelo + "&alto=" + alto + "&ancho=" + ancho +
                    "&profundidad=" + profundidad;

               //var formdata = new FormData();

               //formdata.append("nombre", nombre);
               //formdata.append("documento", documento);
               //formdata.append("n_documento", n_documento);
               //formdata.append("direccion", direccion);
               //formdata.append("celular", celular);
               //formdata.append("correo", correo);
               //formdata.append("id_cargo", id_cargo);
               //formdata.append("usuario", usuario);
               //formdata.append("password", password);

                var ajax = new XMLHttpRequest();

                ajax.onreadystatechange = function () {
                    if (ajax.readyState == 4) {

                        var response = JSON.parse(ajax.responseText);
                        if (response.success) {
                            console.log(response.message);

                            document.getElementById("content").innerHTML = response.message;
                            $("#mod").modal({ backdrop: 'static' });
                            limpiar_spam();
                        } else {
                            console.log(response);
                            limpiar_spam();
                            for (var prop in response.datos) {
                                //console.log("propiedad " + prop + " valor " + response.datos[prop]);
                                document.getElementById(prop).innerHTML = response.datos[prop]
                            }
                        }
                    }
                }

                ajax.open("POST", url, true);
                ajax.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
                ajax.send(param);

                e.preventDefault();
        })

        document.getElementById("mod-acept").addEventListener("click", function () {
            $("#mod").modal("hide");

            document.getElementById("id_categoria").value="";
            document.getElementById("nombre").value = "";
            document.getElementById("serie").value = "";
            document.getElementById("descripcion").value="";
            document.getElementById("codigo").value="";
            document.getElementById("precio").value="";
            document.getElementById("estado").value="";
            document.getElementById("fecha_ing").value="";
            document.getElementById("marca").value="";
            document.getElementById("color").value="";
            document.getElementById("modelo").value="";
            document.getElementById("alto").value="";
            document.getElementById("ancho").value="";
            document.getElementById("profundidad").value="";

        })

        function limpiar_spam() {
            var elementos = document.getElementsByClassName("sp");
            for (i = 0; i < elementos.length ; i++) {
                elementos.item(i).innerHTML = "";
            }
        }

    })

</script>



